import pygame
import random
import sys

# Initialize pygame
pygame.init()

# Screen dimensions
WIDTH = 400
HEIGHT = 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("2D Obstacle Avoidance Car Racing Game")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (200, 0, 0)
BLUE = (0, 0, 255)

# Clock and FPS
clock = pygame.time.Clock()
FPS = 60

# Font
font = pygame.font.SysFont("arial", 30)

# Car properties
car_width = 50
car_height = 80
car_x = WIDTH // 2 - car_width // 2
car_y = HEIGHT - car_height - 20
car_speed = 6

# Obstacle properties
obs_width = 50
obs_height = 80
obs_speed = 6
obstacles = []

# Score
score = 0

# Function to create obstacle
def create_obstacle():
    x = random.randint(0, WIDTH - obs_width)
    y = -obs_height
    return pygame.Rect(x, y, obs_width, obs_height)

# Function to display text
def draw_text(text, color, x, y):
    text_surface = font.render(text, True, color)
    screen.blit(text_surface, (x, y))

# Game over function
def game_over():
    screen.fill(WHITE)
    draw_text("GAME OVER", RED, 120, 250)
    draw_text(f"Score: {score}", BLACK, 140, 300)
    pygame.display.update()
    pygame.time.delay(3000)
    pygame.quit()
    sys.exit()

# Create initial obstacle
obstacles.append(create_obstacle())

# Main game loop
running = True
while running:
    clock.tick(FPS)
    screen.fill(WHITE)

    # Event handling
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    # Keyboard input
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and car_x > 0:
        car_x -= car_speed
    if keys[pygame.K_RIGHT] and car_x < WIDTH - car_width:
        car_x += car_speed

    # Player car rectangle
    car_rect = pygame.Rect(car_x, car_y, car_width, car_height)

    # Obstacle movement and collision
    for obs in obstacles[:]:
        obs.y += obs_speed

        # Collision detection
        if car_rect.colliderect(obs):
            game_over()

        # Obstacle passed
        if obs.y > HEIGHT:
            obstacles.remove(obs)
            obstacles.append(create_obstacle())
            score += 1

        pygame.draw.rect(screen, RED, obs)

    # Draw player car
    pygame.draw.rect(screen, BLUE, car_rect)

    # Display score
    draw_text(f"Score: {score}", BLACK, 10, 10)

    pygame.display.update()
